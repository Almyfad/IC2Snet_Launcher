{
  "name": "ic2snet-launcher",
  "version": "0.76.3",
  "private": true,
  "main": "main.js",
  "author": "LS Development Service",
  "description": "IC2S.net intranet Launcher",
  "repository": {
    "type": "git",
    "url": "git@github.com:Almyfad/IC2Snet_Launcher.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dotenv": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "filereader": "^0.10.3",
    "path": "^0.12.7",
    "rive-js": "^0.7.31"
  },
  "devDependencies": {
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.1"
  },
  "build": {
    "appId": "ic2s.net.intranet-launcher",
    "afterSign": "notarize.js",
    "dmg": {
      "sign": false
    },
    "mac": {
      "target":["zip"],
      "type": "distribution",
      "hardenedRuntime":true,
      "gatekeeperAssess": false,
      "category": "ICS2.net.Intranet.category",
      "icon": "mac-icon.icns",
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist",
      "publish": [
        {
          "provider": "github",
          "owner": "Almyfad",
          "repo": "IC2Snet_Launcher_release"
        }
      ]
    },
    "win": {
      "icon": "assets/img/win-icon.png",
      "publish": [
        {
          "provider": "github",
          "owner": "Almyfad",
          "repo": "IC2Snet_Launcher_release"
        }
      ]
    }
  }
}
